hcd(){
  cd $LEDGER_DIR
}
alias unknown="hledger -f- -I print unknown"

# application shortcuts
alias hl="hledger"
alias hu="hledger-ui"
alias hw="hledger-web"

# importing information
alias hi="hledger import --rules-file import.rules"
alias hd="hledger import --dry --rules-file import.rules"

# report income statement
alias inc="hledger inc -M"
alias inc2="hledger inc -M -2"
alias inc3="hledger inc -M -3"

# report balance statement
alias bs="hledger bs -M"
alias bs2="hledger bs -M -2"
alias bs3="hledger bs -M -3"

# report balance sheet and budget
alias budget="hledger bal --budget -M"
alias bal="hledger bal -M"
alias bal2="hledger bal -M -2"
alias bal3="hledger bal -M -3"

alias h-p="export LEDGER_DIR=""$HOME/portable/financials/personal""; export LEDGER_FILE=""$HOME/portable/financials/personal/finances.journal"""
alias h-b="export LEDGER_DIR=""$HOME/portable/financials/wfp""; export LEDGER_FILE=""$HOME/portable/financials/wfp/finances.journal"""

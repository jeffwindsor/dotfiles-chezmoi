
# switching account defaults
hledger-defaults(){
  LEDGER_DIR=$HOME/Source/github.com/jeffwindsor/financials/$1
  export LEDGER_FILE=$LEDGER_DIR/finances.journal
  cd $LEDGER_DIR/imports
}
#   personal account
alias h2p="defaults personal"
#   windsor family practice account
alias h2b="defaults wfp"

# actions on account
alias hct='hledger accounts'
alias hty='hledger activity'
alias hareg='hledger aregister'
alias hbal='hledger balance -M'
#alias hclose='hledger close'
alias hprint='hledger print'
alias hreg='hledger register'
alias hstats='hledger stats'
alias htags='hledger tags'
alias hbs='hledger bs -M'
alias hbse='hledger bse -M'
alias hinc='hledger is -M'
alias hcf='hledger cashflow -M'
alias hi="hledger import --rules-file import.rules"
alias hd="hledger import --dry --rules-file import.rules"


# filters
alias unknown="hledger -f- -I print unknown"

# application shortcuts
alias hl="hledger"
alias hu="hledger-ui"
alias hw="hledger-web"


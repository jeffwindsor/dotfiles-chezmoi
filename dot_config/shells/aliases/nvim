alias v='nvim'

alias fins='nvim -c ":Telescope find_files cwd=$HOME/portable/financials"'

alias configs='chezmoi list -i files -p absolute | fzf | xargs chezmoi edit'
alias dots='chezmoi list -i files -p absolute | fzf | xargs chezmoi edit'
alias ins='chezmoi list -i files -p absolute | rg installs | fzf | xargs chezmoi edit'


alias v='nvim'

clist='chezmoi list -i files -p absolute'
cpick='fzf --preview="bat --color=always --style=numbers {}"'
cedit='xargs chezmoi edit --apply'

alias configs="$clist | $cpick | $cedit"
alias dots="$clist | $cpick | $cedit"
alias ins="$clist | rg installs | $cpick | $cedit"

tffc='nvim -c ":Telescope find_files cwd='

alias fins='$ttfc$HOME/portable/financials"'
#alias configs='$ttfc$XDG_CONFIG_HOME"'
#alias dots='$ttfc$DOTFILES"'
#alias ins='$ttfc$INSTALLS"'


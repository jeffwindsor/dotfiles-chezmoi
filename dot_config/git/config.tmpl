[user]
    name = {{ .name }}
    email = {{ .email }}

[core]
    excludesFile = ~/.config/git/ignore

[pull]
	ff = only

[init]
    defaultBranch = main

[credential]
	helper = cache

[url "git@github.com:"]
	insteadOf = https://github.com/

{{ if eq .chezmoi.os "darwin" }}
[credential]
    helper = osxkeychain
{ end }}
